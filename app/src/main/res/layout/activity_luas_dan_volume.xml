<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LuasDanVolume">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Panjang"
        android:id="@+id/etPanjang"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Lebar"
        android:id="@+id/etLebar"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Tinggi"
        android:id="@+id/etTinggi"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hitung Luas!"
        android:id="@+id/btnLuas"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hitung Volume!"
        android:layout_marginTop="10dp"
        android:id="@+id/btnVolum"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hasil"
        android:textSize="30dp"
        android:gravity="center"
        android:id="@+id/tvHasil"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kembali"
        android:id="@+id/btnHomie"
        android:layout_marginTop="100dp"/>

</LinearLayout>