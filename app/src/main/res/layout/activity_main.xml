<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".MainActivity">
    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Choice Your Option!"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="40dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Convert Suhu"
        android:backgroundTint="@color/black"
        android:layout_margin="10dp"
        android:id="@+id/btnSuhuu"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Program Kasir"
        android:layout_margin="10dp"
        android:backgroundTint="@color/black"
        android:id="@+id/btnDuaa"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Luas dan Volume"
        android:layout_margin="10dp"
        android:backgroundTint="@color/black"
        android:id="@+id/btnTigaa"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Program Python"
        android:layout_margin="10dp"
        android:backgroundTint="@color/black"
        android:id="@+id/btnEmpatt"/>




  </LinearLayout>